doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    link(rel='stylesheet' href='/stylesheets/style.css')
    script(defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
    script(defer src='/scripts/app.js')
  body
    div(class='container-fluid')
  div(class='row')
    div(class='col-3')
      block sidebar
        ul(class='sidebar-nav')
          li(class='nav-item')
            a(class = '' href='/') Home

          li(class='nav-item')
            a(class = '' href='/inventory/categories') categories
            ul(class='sidebar-nav')
              each category in categoryList || []
                li(class='nav-item')
                  a( class = '' href='/inventory/category/'+category.id) #{category.name}
              li(class='nav-item')
                a(class = '' href='/inventory/category/new') +Add new category
          li(class='nav-item')
            a( class = '' href='/inventory/items') All items
            ul(class='sidebar-nav')
              li(class='nav-item')
                a(class = '' href='/inventory/item/new') +Add new item
    div(class='col-9')
      block content