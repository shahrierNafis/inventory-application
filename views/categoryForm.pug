extends layout
block content
    h1= title 
    form(method='POST' action='')
        .form-group.form-floating

            input#name.form-control(type='text',
                placeholder='watch, food etc.',
                name='name' value=(category ? category.name : ''),
                required='true')
            label(for='name') Category:
        .form-group.form-floating

            textarea#description.form-control(type='textarea'
                placeholder='description....' 
                name='description') #{category ? category.description : ''}
            label(for='description') Description:
        .form-group.form-floating
            input#password.form-control(type='password',
                placeholder='********',
                name='password' ,
                required='true')
            label(for='name') Password:
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li
                    div(class='alert alert-danger' role='alert')
                        != error.msg